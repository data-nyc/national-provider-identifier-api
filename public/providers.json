{
  "apiVersion": "1.0",
  "swaggerVersion": "1.2",
  "basePath": "http://health-provider-api.herokuapp.com/",
  "apis": [
    {
      "path": "v1/providers.json",
      "operations": [
        {
          "summary": "Search Multiple Providers",
          "parameters": [
            {
              "paramType": "query",
              "name": "entity",
              "type": "integer",
              "description": "Entity (individual=1, organization=2)",
              "required": false
            },
            {
              "paramType": "query",
              "name": "offset",
              "type": "integer",
              "description": "Pagination offset",
              "required": false
            },
            {
              "paramType": "query",
              "name": "page",
              "type": "integer",
              "description": "Pagination page",
              "required": false
            }
          ],
          "method": "get",
          "nickname": "Providers#index"
        }
      ]
    },
    {
      "path": "v1/providers/{id}.json",
      "operations": [
        {
          "summary": "Search Single Provider",
          "parameters": [
            {
              "paramType": "path",
              "name": "id",
              "type": "string",
              "description": "National Provider Identity (npi)",
              "required": true
            }
          ],
          "method": "get",
          "nickname": "Providers#show"
        }
      ]
    }
  ],
  "resourcePath": "providers"
}